---
import '../styles/grid.css'
import product from '../data/product.json'
import Navbar from '../components/Navbar.astro'
---
<head>
  <meta charset="utf-8" />
<link rel="icon" type="image/png" href="/favicon.png" />
<meta name="viewport" content="width=device-width" />
<meta name="generator" content={Astro.generator } />
<title> Products </title>
</head>
<body class="bg-[#E5E5CB] dark:bg-[#1A120B] p-2 md:p-8">
  <Navbar></Navbar>
<h1 class="text-2xl text-[#1A120B] dark:text-[#E5E5CB] font-extrabold p-12">Available Products</h1>
<div class="cards pt-10 pb-10">
{product.map(product => (
<div class="card" style= {{ backgroundImage: `url(/assets/${product.img })`,backgroundSize: 'cover' }}>

<div class="glass h-10 w-full mt-40 justify-between flex">
<div class="overflow-hidden font-bold p-2">{product.name}</div>
<button
  data-ripple-light="true"
  data-dialog-target="dialog"
  class="rounded-lg bg-indigo-600 py-3 px-6 font-sans text-xs font-bold uppercase text-white shadow-md transition-all active:opacity-[0.85] disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none"
>
  {product.price}Rs
</button>
</div>
<div
  data-dialog-backdrop="dialog"
  data-dialog-backdrop-close="true"
  class="pointer-events-none fixed inset-0 z-[999] grid h-screen w-screen place-items-center bg-black bg-opacity-60 opacity-0 backdrop-blur-sm transition-opacity duration-300"
>
  <div
    data-dialog="dialog"
    class="relative min-w-[80%] max-w-[80%] rounded-lg bg-white font-sans text-base font-light leading-relaxed text-blue-gray-500 antialiased shadow-2xl"
  >
 
    <div class="flex shrink-0 items-center p-4 font-sans dark:text-black font-semibold leading-snug text-blue-gray-900 antialiased">
      {product.name}
    </div>
    <div class="relative border-t border-b border-t-blue-gray-100 border-b-blue-gray-100 p-4 font-sans text-base font-light leading-relaxed text-blue-gray-500 dark:text-black antialiased">
      {product.desc}
    </div>
  
</div>
</div>
</div>
))}
</div>
<div class="p-2 h-2"/> 
<div class="h-[2px] w-9/12 center bg-[#352F44] mb-6 dark:bg-amber-100"></div>
 <p class="center text-center text-black dark:text-gray-100 mb-16">All Rights reserved by <br/> Teju Timbers</p>
 </div>
 
<style>
  	  .center {
  display: block;
  margin-left: auto;
  margin-right: auto;
  width: 50%;
}
  .sub_div {
         
            bottom: 0px;
        }
</style>
<script src="https://unpkg.com/@material-tailwind/html@latest/scripts/dialog.js"></script>
</body>